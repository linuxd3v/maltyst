{
  "presets": [
    [
      "@babel/env",
      {
        "targets": {
          "browsers": ["> 0.25%", "not dead"],
          "node": "current"
        },
        "useBuiltIns": "usage", // Only include polyfills that are actually used
        "corejs": "3.x", // Use the latest stable core-js version
        "bugfixes": true // Enable fixes for known bugs in targeted environments
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-syntax-dynamic-import"
  ]
}